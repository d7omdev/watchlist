{
  "name": "watchlist-backend",
  "version": "1.0.0",
  "description": "Node.js backend API for WatchList - track your favorite movies and TV shows",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --clear src/index.ts",
    "build": "tsc && echo 'âœ… Backend build completed'",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio --port 4983",
    "db:seed": "ts-node src/seed.ts",
    "db:reset": "npm run db:generate && npm run db:migrate",
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "mysql",
    "drizzle-orm",
    "jwt",
    "api",
    "backend"
  ],
  "author": {
    "name": "D7om",
    "email": "hello@d7om.dev"
  },
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@openauthjs/openauth": "^0.4.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.3",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.14.2",
    "ts-node-dev": "^2.0.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^24.1.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
